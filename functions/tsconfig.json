{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "rootDir": "src",
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "types": ["node", "express", "jest"]
  },
  "exclude": ["node_modules", "lib"],
  "compileOnSave": true,
  "include": ["src"]
}
